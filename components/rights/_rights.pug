//- Copyright
mixin rights
	// Copyright
	p.rights&attributes( attributes )
		small!= `&copy; <span class='copyright-year'></span>. ${logo.name}. All Rights Reserved.`

mixin rights-2
	// Copyright
	p.rights&attributes( attributes )
		span &copy; 2019&nbsp;
		span= logo.name
		span . All rights reserved
